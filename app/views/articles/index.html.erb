<header>
  <div id="contents">
      <h1 class="headline">
        <a href="/">Breakers</a>
      </h1>

      <nav>
        <ul class="nav-list">
          <li class="nav-list-item"><%= link_to "動画を投稿する", new_article_path %></li>
          <li class="nav-list-item" data-turbolinks="false"><%= link_to "場所を探す", places_path %></li>
          <li class="nav-list-item"><%= link_to "つながる", all_path %></li>
        </ul>
      </nav>
</header>



<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="all">
          <h1>Articles</h1>
          <div class="col-lg-12">
            <table>
                <thead>
                  <tr>
                    <th class="textcolor">Title</th>
                    <th class="text-center textcolor">Video</th>
                    <th class="textcolor">Contributor</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% @articles.each do |article| %>
                    <tr>
                      <td class="textcolor"><%= article.title %></td>
                      <td class="textcolor"><%= article.video %></td>
                      <td class="textcolor"><%= article.user.name %></td>
                      <td><%= link_to 'Show', article ,:style => "color:white;" %></td>

                      <% if article.user == current_user %>
                        <td><%= link_to 'Edit', edit_article_path(article) ,:style => "color:white;" %></td>
                        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } ,:style => "color:white;"%></td>
                      <% end %>


                    </tr>
                  <% end %>
                </tbody>
            </table>
          </div>
    </div>
  </div>
  <%= link_to 'New Article', new_article_path ,:style => "color:white;"%>
</div>



<div class="videocase">
    <video src="/assets/videos/videoplayback2.mp4" muted autoplay loop></video>
</div>


