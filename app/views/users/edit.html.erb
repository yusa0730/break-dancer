<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">      
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-4 col-md-offset-4">
                          <div class="form-user style-1 rounded has-shadow-1"> 
                            <div class="form-header text-center">
                                <h2 class="form-header-title">Profile</h2>
                            </div>
                            <div class="form-body">

                            <%= form_for(current_user) do |f| %>
								<div class="form-group has-icon">
       							 <label >Name</label>
									<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
        							<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
								</div>

								<div class="form-group has-icon">
									<div class="user-edit-image">
										<%= attachment_image_tag current_user, :profile_image, :fill, 90, 90, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
									</div>
									<label>ProfileImage</label>
									<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form"%>
								</div>
								<%= f.submit "変更を保存"%>
							<% end %>

							</div>
                          </div> 
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>